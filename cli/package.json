{
  "name": "octodev-cli",
  "version": "0.1.0",
  "description": "Standalone CLI for octodev - AI-powered development tool",
  "type": "module",
  "main": "./dist/bin/cli.js",
  "bin": {
    "octodev": "./dist/bin/cli.js"
  },
  "scripts": {
    "dev": "tsx src/bin/cli.ts",
    "build": "tsc",
    "start": "node dist/bin/cli.js",
    "shell": "tsx src/bin/shell.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest src/__tests__/unit",
    "test:integration": "vitest src/__tests__/integration",
    "test:security": "vitest src/__tests__/security",
    "test:stress": "vitest src/__tests__/stress",
    "test:all": "vitest run --reporter=verbose"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "ink-box": "^1.0.0",
    "ink-gradient": "^2.0.0",
    "ink-spinner": "^5.0.0",
    "pino": "^9.1.0",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.4.5",
    "zustand": "^4.4.7",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.4",
    "ai": "^4.3.16",
    "@ai-sdk/openai": "^1.1.2",
    "@ai-sdk/anthropic": "^0.0.39",
    "better-sqlite3": "^9.2.2",
    "encoding": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/js-yaml": "^4.0.9",
    "@types/better-sqlite3": "^7.6.8",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "@testing-library/react": "^14.1.2",
    "@vitest/coverage-v8": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
