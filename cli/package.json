{
  "name": "@octodev-bot/octodev-cli",
  "version": "0.1.0",
  "description": "Standalone CLI for octodev - AI-powered development tool with LLM integration, tool execution, and TUI shell",
  "type": "module",
  "main": "./dist/bin/cli.js",
  "bin": {
    "octodev": "./dist/bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/khulnasoft-bot/octodev.git",
    "directory": "cli"
  },
  "keywords": [
    "cli",
    "ai",
    "development",
    "llm",
    "tui",
    "terminal",
    "shell",
    "automation",
    "tool-execution"
  ],
  "author": "khulnasoft-bot",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/bin/cli.ts",
    "build": "tsc",
    "start": "node dist/bin/cli.js",
    "shell": "tsx src/bin/shell.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest src/__tests__/unit",
    "test:integration": "vitest src/__tests__/integration",
    "test:security": "vitest src/__tests__/security",
    "test:stress": "vitest src/__tests__/stress",
    "test:all": "vitest run --reporter=verbose",
    "build:binaries": "bash scripts/build-binaries.sh",
    "build:docker": "docker build -t @octodev-bot/octodev-cli:latest -f build/Dockerfile .",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "publish:npm": "npm publish",
    "publish:github": "npm publish --registry https://npm.pkg.github.com"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "ink-box": "^1.0.0",
    "ink-gradient": "^2.0.0",
    "ink-spinner": "^5.0.0",
    "pino": "^9.1.0",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.4.5",
    "zustand": "^4.4.7",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.4",
    "ai": "^4.3.16",
    "@ai-sdk/openai": "^1.1.2",
    "@ai-sdk/anthropic": "^0.0.39",
    "better-sqlite3": "^9.2.2",
    "encoding": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/js-yaml": "^4.0.9",
    "@types/better-sqlite3": "^7.6.8",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "@testing-library/react": "^14.1.2",
    "@vitest/coverage-v8": "^1.0.4",
    "pkg": "^5.11.0",
    "standard-version": "^9.5.0",
    "husky": "^8.0.3",
    "commitizen": "^4.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
